<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector_my_transp_background"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:gravity="center|top"
    android:orientation="horizontal"
    android:padding="@dimen/padding_small">

    <ImageView
        android:id="@+id/my_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_small"
        android:background="@drawable/list_selector_my_transp_background"
        android:clickable="false"
        android:contentDescription="@string/person"
        android:focusable="false"
        android:src="@drawable/ic_action_person_purple" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/person_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_eap_logo_dark_blue"
            android:textSize="@dimen/font_size_small" />

        <TextView
            android:id="@+id/person_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_eap_logo_dark_blue"
            android:textSize="@dimen/font_size_small" />


    </LinearLayout>
</LinearLayout>